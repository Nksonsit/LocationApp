<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myapp.locationapp.ui.RegisterActivity">

    <com.myapp.locationapp.custom.TfTextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginView"
        android:layout_centerHorizontal="true"
        android:text="Welcome Speed Test"
        android:textSize="18sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/loginView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:contentPadding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.myapp.locationapp.custom.TfEditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/edt_bg"
                    android:ellipsize="end"
                    android:hint="First name"
                    android:lines="1"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:padding="8dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />

                <com.myapp.locationapp.custom.TfEditText
                    android:id="@+id/edtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/edt_bg"
                    android:ellipsize="end"
                    android:hint="Last name"
                    android:lines="1"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:padding="8dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />

                <com.myapp.locationapp.custom.TfEditText
                    android:id="@+id/edtEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/edt_bg"
                    android:ellipsize="end"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:padding="8dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />


                <com.myapp.locationapp.custom.TfEditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/edt_bg"
                    android:ellipsize="end"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:padding="8dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="8dp" />


                <com.myapp.locationapp.custom.TfEditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/edt_bg"
                    android:ellipsize="end"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:padding="8dp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="16dp" />

                <com.myapp.locationapp.custom.TfButton
                    android:id="@+id/btnSignUp"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="SIGN UP"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.myapp.locationapp.custom.TfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ALREADY HAVE AN ACCOUNT ? " />

                    <com.myapp.locationapp.custom.TfTextView
                        android:id="@+id/txtSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="SIGN IN"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        app:ftype="bold" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
